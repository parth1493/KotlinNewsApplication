<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_content">
    </FrameLayout>

    <TextView
        android:id="@+id/noInternetText"
        android:text="No internet connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/activity_content"
        app:layout_constraintEnd_toEndOf="@+id/activity_content"
        app:layout_constraintStart_toStartOf="@+id/activity_content"
        app:layout_constraintTop_toBottomOf="@+id/refreshImage"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:onClick="onClick"
        android:id="@+id/refreshImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/refreshimage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>